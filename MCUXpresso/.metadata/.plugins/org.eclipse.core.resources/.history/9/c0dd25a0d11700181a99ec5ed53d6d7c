#include <gui/main_screen_screen/main_screenView.hpp>

main_screenView::main_screenView()
{
	transactionScreenEntered();
}

void main_screenView::setupScreen()
{

}

void main_screenView::tearDownScreen()
{

}

void main_screenView::setCurrency(enum currency curr)
{
	switch(curr)
	{
		case BTC:
			Unicode::snprintf(currencyBuffer, CURRENCY_SIZE, "%s", "Bitcoin");
			break;
		case ETH:
			Unicode::snprintf(currencyBuffer, CURRENCY_SIZE, "%s", "Ethereum");
			break;
		case LIT:
			Unicode::snprintf(currencyBuffer, CURRENCY_SIZE, "%s", "Litecoin");
			break;
	}

	currency.invalidate();
}

void main_screenView::setAddress(unsigned char *addr)
{
	int i = 0;
	for(i = 0; i < 40; i++)
	{
		Unicode::snprintf(addressBuffer, ADDRESS_SIZE, "0x%x", addr);
	}
	address.invalidate();
}

void main_screenView::setValue(double val)
{
	Unicode::snprintfFloat(valueBuffer, VALUE_SIZE, "%f", val);
	value.invalidate();
}

void main_screenView::transactionScreenEntered()
{
	presenter->transactionScreenEntered();
}

